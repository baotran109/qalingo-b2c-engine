<!--
 All (relative) paths are relative to the installation path
  
  persistent: Save changes made via the API to this file
  sharedLib: path to a lib directory that will be shared across all cores
-->
<solr persistent="false">

  <!--
  adminPath: RequestHandler path to manage cores.  
    If 'null' (or absent), cores will not be manageable via request handler
  -->
	<cores adminPath="/admin/cores">
		<core name="product-marketing" instanceDir="${solr.home.dir}/instance/product-marketing" />
		<core name="product-sku" instanceDir="${solr.home.dir}/instance/product-sku" />
		<core name="catalog-category" instanceDir="${solr.home.dir}/instance/catalog-category" />
		<core name="customer" instanceDir="${solr.home.dir}/instance/customer" />
		<core name="store" instanceDir="${solr.home.dir}/instance/store" />
	</cores>
</solr>
